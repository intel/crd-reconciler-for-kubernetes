all: docker

version=v0.1.0

docker:
	(cd ../../ && make docker)
	docker build --no-cache -t example-controller:$(version) .

lint:
	gometalinter --config=lint.json .
	gometalinter --config=lint.json ./apis/...
	gometalinter --config=lint.json ./client/...
	gometalinter --config=lint.json ./controller/...

test: lint
	go test -v .
	go test -v ./apis/...
	go test -v ./client/...
	go test -v ./controller/...
