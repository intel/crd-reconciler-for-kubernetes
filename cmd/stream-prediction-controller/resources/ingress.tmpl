apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: "{{.Spec.StreamDataSpec.StreamName}}"
  annotations:
    kubernetes.io/ingress.class: "nginx"
spec:
  rules:
  - host: "stream.nervanasys.com"
    http:
      paths:
      - path: /api/v1/predictions/stream/"{{.Spec.SecuritySpec.PresignedToken}}"
        backend:
          serviceName: "{{.Spec.StreamDataSpec.StreamName}}"
          servicePort: 80
