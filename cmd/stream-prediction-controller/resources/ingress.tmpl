apiVersion: extensions/v1beta1
kind: Ingress
metadata:
  name: "{{.Spec.StreamDataSpec.StreamName}}"
  namespace: "{{.ObjectMeta.Namespace}}"
  annotations:
    kubernetes.io/ingress.class: "nginx"
  ownerReferences:
  - apiVersion: {{.APIVersion}}
    kind: {{.Kind}}
    name: {{.Name}}
    uid: {{.UID}}
    controller: {{.Controller}}
    blockOwnerDeletion: {{.BlockOwnerDeletion}}
spec:
  rules:
  - host: {{ GlobalTemplateValue "INGRESS_HOST" }}
    http:
      paths:
      - path: "/api/v1/predictions/stream/{{.Spec.SecuritySpec.PresignedToken}}"
        backend:
          serviceName: "{{.Spec.StreamDataSpec.StreamName}}"
          servicePort: 80
