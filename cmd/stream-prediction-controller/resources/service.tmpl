apiVersion: v1
kind: Service
metadata:
  name: "{{.Spec.StreamDataSpec.StreamName}}"
  namespace: "{{.ObjectMeta.Namespace}}"
  labels:
    run: "{{.Spec.StreamDataSpec.StreamName}}"
  ownerReferences:
  - apiVersion: {{.APIVersion}}
    kind: {{.Kind}}
    name: {{.Name}}
    uid: {{.UID}}
    controller: {{.Controller}}
    blockOwnerDeletion: {{.BlockOwnerDeletion}}
spec:
  selector:
    run: "{{.Spec.StreamDataSpec.StreamName}}"
  ports:
  - port: 80
    targetPort: 80
